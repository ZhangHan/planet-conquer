- content_for :head do
  = stylesheet_link_tag "room"
  = javascript_include_tag "room"

#board-head-outter
  #board-head
    %h1 planet conquer
    #round
      round
      %span#current-round= 0
      = "/"
      %span#max-round= 0
    #game-status

#board-scene

#board-side-left
  #players.side-block
  #desc.side-block

#board-side-right
  #recorder.side-block
    %input.btn.record-record{type: "button", value: "record"}
    %input.btn.record-replay{type: "button", value: "replay"}
    %span.record-display  
      %span.replay-on= 0
      = "/"
      %span.record-count= 0  
  #logs.side-block

- content_for :javascripts do
  - game_server = "localhost:9999"
  - room_id = 0

  :coffeescript
    game = new Game()
    shower = new GameShower(game, "#board")
    window.recorder = new Recorder(game, "#recorder")
    game.set_server("#{game_server}", #{room_id})
